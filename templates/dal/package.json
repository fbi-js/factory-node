{
  "name": "<%= project.name %>",
  "version": "0.0.0",
  "description": "",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only ./src/app.ts",
    "prod": "cross-env NODE_ENV=production node dist/src/app",
    "build": "rm -rf dist && npm run generate && tsc",
    "clean": "rm -rf dist && rm -rf node_modules",
    <%_ if (project.features['multi-tenant']) { _%>
    "generate": "npx mrapi generate --services management blog music",
    "migrate": "npm run migrate:management && npm run migrate:services",
    "migrate:management": "npx mrapi migrate --services management",
    "migrate:services": "npx mrapi migrate --services blog music"
    <%_ } else { _%>
    "generate": "npx mrapi generate --services default",
    "migrate": "npx mrapi migrate --services default"
    <%_ } _%>
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@mrapi/dal": "next"
  },
  "devDependencies": {
    "@mrapi/cli": "next",
    "cross-env": "^7.0.2",
    "tslib": "^2.0.3",
    "fs-extra": "^9.0.1",
    "prettier": "^2.1.2",
    "typescript": "^4.0.3",
    "ts-node-dev": "1.0.0-pre.63"
  },
  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
