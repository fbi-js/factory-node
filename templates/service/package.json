{
  "name": "<%= project.name %>",
  "version": "1.0.0",
  "private": "true",
  "description": "<%= project.description %>",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "dev": "fbi serve ./src/app.ts",
    "build": "fbi build"
  },
  "keywords": [],
  "author": "fbi",
  "license": "MIT",
  "dependencies": {
    "@mrapi/service": "^1.0.0-beta.1",
    <%_ if (project.features.prisma) { _%>
    "@mrapi/datasource": "^1.0.0-beta.0",
    "@prisma/client": "^2.13",
    "nexus-plugin-prisma": "^0.26",
    <%_ } _%>
    <%_ if (project.features.graphql) { _%>
    "@mrapi/graphql": "^1.0.0-beta.1",
    "@nexus/schema": "^0.19.2",
    "graphql": "^15.4.0",
    "graphql-playground-middleware-express": "^1.7.22",
    <%_ } _%>
    <%_ if (project.features.openapi) { _%>
    "express-openapi": "^7.2.0",
    <%_ } _%>
    "pino-pretty": "^4.3.0"
  },
  "devDependencies": {
    "@fbi-js/factory-node": "^<%= factoryVersion %>",
    "@mrapi/cli": "^2.0.1-beta.1",
    <%_ if (project.features.prisma) { _%>
    "@prisma/cli": "^2.13",
    "@paljs/generator": "^2.8.4",
    "@paljs/schema": "^2.8.1"
    <%_ } _%>
  },
  "fbi": {
    "factory": {
      "id": "<%= factory.id %>",
      "version": "<%= factory.version %>",
      "template": "<%= factory.template %>",
      "features": <%- JSON.stringify(project.features) %>
    }
  },
  "resolutions": {
    "graphql": "15.4.0"
  },
  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
