{
  "name": "<%= project.name %>",
  "version": "1.0.0",
  "description": "",
  "main": "/lib/index.js",
  "scripts": {
    <%_ if (project.features.combined) { _%>
    "generate": "npx mrapi generate --services blog",
    "migrate": "npx mrapi migrate --services blog",
    <%_ } _%>
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch /.meshrc.js ./src/app.ts",
    "debug": "cross-env ts-node-dev --inspect --respawn --transpile-only --ignore-watch /.meshrc.js ./src/app.ts",
    "prod": "cross-env NODE_ENV=production node dist/app",
    "build": "tsc",
    "clean": "rm -rf dist && rm -rf node_modules"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@mrapi/api": "next",
    "@mrapi/dal": "next"
  },
  "devDependencies": {
    "@mrapi/cli": "next",
    "cross-env": "^7.0.2",
    "tslib": "^2.0.3",
    "typescript": "^4.0.3",
    "ts-node-dev": "1.0.0-pre.63"
  },
  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
