{ 
  //"extends": "../../tsconfig.json",
  "compileOnSave":false,
  "compilerOptions": {
    "incremental": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "sourceMap": false,

    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,

    "composite": true
  },
  "include": ["src/**/*", "config", "scripts","view_dist"],
  "exclude":["node_modules"]
}
